<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('common/headContent', {titulo: 'Meu restaurante'}) %>
    <script type="text/javascript" src="/javascripts/removerItem.js"> </script>
  </head>
  <body>
    <%- include('./common/carrinhoIcon') %>

    <div class="container">
      <%- include('./common/menu') %>

      <% if (carrinho.length == 0){ %>
        <h3>Seu carrinho est√° vazio</h3>
      <% } else { %>

        <% if (itemRemovido != '') {%>
          <div id="alert_item_adicionado" class="alert alert-success mt-4" role="alert">
            <%= itemRemovido %> removido do carrinho.
          </div>
        <% } %>

        <div class="container mt-4 mb-4" style="width:500px;">
          <% for (let item of carrinho){ %>
            <div id="<%= item._id %>" class="row mb-2">
              <div class="col">
                <img src="<%= item.fotoUrl %>" width="80" height="80" class="img-fluid mt-4">
                <p class="mt-2" style="font-size:20px"> <strong> <%= item.nome %> </strong> </p>
                <p>R$ <%= item.valor %>,<%= item.valorCentavos1 %><%= item.valorCentavos2 %></p>
              </div>

              <div class="col">
                <a class="btn btn-danger mt-4 me-4" href="/remover_item_carrinho?item_id=<%= item._id %>">Remover</a>
              </div>
            </div>
          <% } %>

          <div class="row border-3 border-top w-50">
            <div class="col">
              <h4 class="mt-2" style="font-weight:bold">Total: <%= total %></h4>
            </div>
          </div>

          <div class="row mt-4">
            <div class="col">
              <button type="button" class="btn btn-success">Ir para o caixa</button>
            </div>
          </div>
        </div>

      <% } %>
    </div>

  </body>
</html>
