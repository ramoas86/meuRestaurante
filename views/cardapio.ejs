              <h5 class="card-title"><%= item.nome %></h5>
              <h6 class="card-subtitle mb-2 text-muted">R$ <%= item.valor %>,<%= item.valorCentavos1 %><%= item.valorCentavos2 %></h6>
              <a href="#" class="btn btn-primary">Detalhes</a>
              <a href="#" class="btn btn-success">Adicionar</a>
            </div>
          </div>
        <% } %>
        </div>
      <% } else {%>
        <div class="d-flex mt-4 mb-4 flex-column align-items-center">
          <% for (let cat of categoriasDAO) {%>
            <h3>
              <a href="cardapio/<%= cat %>" class=""><%= cat %></a>
            </h3>
          <% } %>
        </div>
      <% } %>


    </div>

  </body>
</html>
