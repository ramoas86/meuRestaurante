  <body>

    <div class="container">
      <%- include('./common/menu') %>

      <% if (params.categoria) {%>
        <div class="cardapio-categoria mt-4">
        <h4 class="text-primary border-bottom border-primary"><%= params.categoria %></h4>

        <% for (let item of itensCartegoriaCardapio){ %>
          <div class="card me-2" style="width: 18rem;">
