<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('common/headContent', {titulo: 'Meu restaurante'}) %>
  </head>
  <body>
    <%- include('./common/carrinhoIcon') %>

    <div class="container">

      <%- include('./common/menu') %>

      <h3 class="text-center mt-4">Cadastro</h3>

      <form class="d-flex flex-column align-items-center mt-4">

        <div class="mb-3 w-50">
          <label class="form-label">Nome</label>
          <input type="text" class="form-control" required>
        </div>

        <div class="mb-3 w-50">
          <label class="form-label">Email</label>
          <input type="email" class="form-control" required>
        </div>

        <div class="mb-3 w-50">
          <label class="form-label">Senha</label>
          <input type="password" class="form-control" required>
        </div>

        <div class="mb-3 w-50">
          <label class="form-label">Repetir senha</label>
          <input type="password" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar</button>
      </form>

    </div>

  </body>
</html>
